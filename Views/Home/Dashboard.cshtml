@model Dashboard
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .label-container {
            display: flex;
            flex-direction: row;
            gap: 40px; /* Adjust gap size as needed */
        }

        /* Style for labels */
        .firstLabel, .secondLabel, .thirdLabel {
            font-size: 1.25rem; /* Larger font size */
            color: #483d8b; /* Purple text color */
            font-weight: bold; /* Bold text */
            margin: 30px 0; /* Space between labels */
        }

        body {
            font-family: Arial, sans-serif; /* Custom font for the page */
            margin: 20px; /* Add margin around the body */
        }

        .banner-header {
            background-color: #faebd7; /* Peach background */
            color: #483d8b; /* White text */
            text-align: center;
            padding: 20px;
            font-size: 24px;
            font-family: Arial, sans-serif;
            width: 100%;
            margin: 0;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <header class="banner-header">
    <div class="label-container">
        <label asp-for="FirstName" class="form-label fs-4 fw-bold">First Name</label>
        <label asp-for="LastName" class="form-label fs-4 fw-bold">Last Name</label>
        <label asp-for="Age" class="form-label fs-4 fw-bold">Age</label>
        <style>
            .custom-button {
                background-color: #faebd7; /*  background */
                color: #483d8b; /*  text */
                padding: 10px 20px; /* Padding around text */
                font-size: 16px; /* Text size */
                border: none; /* No border */
                border-radius: 5px; /* Rounded corners */
                cursor: pointer; /* Pointer cursor on hover */
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Subtle shadow */
                font-weight: bold;
            }

            .custom-button:hover {
                background-color: #fdf5e6; /* Darker green on hover */
            }
        </style>
        <button type="button" class="custom-button">Edit</button>
    </div>
    </header>
</body>
</html>





