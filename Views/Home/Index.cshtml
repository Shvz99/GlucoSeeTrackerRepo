@model Landing
<!DOCTYPE html> 

<html>
<head>
<style>
    .Label {
        font-weight: bold;
        color: #483d8b;
        font-size: 1.25rem;
    }

    input[type=text], [type=password] {
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px 10px;
    }

    .login-form button[type=submit], .login-form button[type=button] {
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px 10px;
        background-color: #b0e0e6;
        border: none;
        color: black;
        font-weight: bold;
    }

    .login-form button[type=submit]:hover, .login-form button[type=button]:hover {
        background-color: #e0ffff;
        color: black;
        font-weight: bold;
    }

    .alert {
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
    }
</style>
</head>

<body>
    <h1>Login</h1>
    <!-- Display error message if present -->
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert">@ViewBag.Error</div>
    }

<form asp-action="Index" asp-controller="Home" method="post" class="form-signin login-form text-center d-flex justify-content-center align-items-center vh-100">
    <div>
    <h2 class="h3 mb-3 font-weight-normal">Please sign in</h2>
    <label asp-for="Username" class="sr-only Label">Username</label>
    <input asp-for="Username" type="text" class="form-control" placeholder="Username" required autofocus />
    <br />
    <label asp-for="Password" class="sr-only Label">Password</label>
    <input asp-for="Password" class="form-control" placeholder="Password" type="password" required />
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <button class="btn btn-lg btn-secondary btn-block" type="button" onclick="location.href='@Url.Action("Register", "Home")'">Register</button>
    </div>
</form>
</body>
</html>



