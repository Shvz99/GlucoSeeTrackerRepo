@model GlucoSeeTracker.Models.GlucoRecord

<h4>Add New Reading</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GlucoLevel" class="control-label"></label>
                <input asp-for="GlucoLevel" class="form-control" />
                <span asp-validation-for="GlucoLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrePostMeal" class="control-label"></label>
                <select asp-for="PrePostMeal" class="form-control">
                    <option value="Pre">Pre-Meal</option>
                    <option value="Post">Post-Meal</option>
                </select>
                <span asp-validation-for="PrePostMeal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
